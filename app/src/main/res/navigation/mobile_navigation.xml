<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_welcome">

    <fragment
        android:id="@+id/navigation_welcome"
        android:name="de.tuchemnitz.armadillogin.ui.welcome.WelcomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_help"
            app:destination="@id/navigation_help" />
        <action
            android:id="@+id/action_navigation_welcome_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_help"
        android:name="de.tuchemnitz.armadillogin.ui.help.HelpFragment"
        android:label="@string/title_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="de.tuchemnitz.armadillogin.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_help2"
            app:destination="@id/navigation_help" />
    </fragment>


</navigation>